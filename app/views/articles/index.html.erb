<h1>All Articles</h1>
<% @articles.each do |article| %>
    <dl>
      <dt><%= article.title %></dt>
      <dd><%= article.text %></dd>
      <dd><%= link_to 'View →', article_path(article), class: 'btn btn-default btn-sm' %></dd>
    </dl>
  <% end %>
<p>
  <%= link_to '← Home', root_path, class: 'btn btn-default' %>
  <%= link_to '+ New', new_article_path, class: 'btn btn-primary' %>
</p>
