<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
      <h4>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this article from being saved:
      </h4>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>

  <div class="form-group">
    <%= form.label :name, class: 'control-label' %>
    <%= form.text_field :name, id: :user_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email, class: 'control-label' %>
    <%= form.text_field :email, id: :user_email, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password, class: 'control-label' %>
    <%= form.text_field :password, id: :user_password, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, class: 'control-label' %>
    <%= form.text_field :password_confirmation, id: :user_password_confirmation, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :auth0_id, 'Auth0 ID', class: 'control-label' %>
    <%= form.text_field :auth0_id, id: :user_auth0_id, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= link_to '← Cancel', users_path, class: 'btn btn-default' %>
    <%= form.submit '+ Save Changes', :class => 'btn btn-primary' %>
  </div>
<% end %>
