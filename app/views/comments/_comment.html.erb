<dl class="comment">
  <dt>
    <code><%= link_to get_username(comment.user_id), user_path(comment.user_id) %></code>
    said:
  </dt>
  <dd><%= comment.body %></dd>
  <% if current_user.id == comment.user_id %>
  <dd><%= link_to 'Delete',
            [comment.article, comment],
            method: :delete,
            data: { confirm: 'Are you sure?' },
            class: 'btn btn-danger btn-sm' %></dd>
  <% end %>
</dl>
